{
  "name": "@astronautlabs/jwt",
  "version": "1.1.2",
  "description": "An isomorphic JWT library (works in browser and Node.js)",
  "main": "dist/node/index.js",
  "module": "dist.esm/node/index.js",
  "browser": "dist.esm/browser/index.js",
  "types": "dist/node/index.d.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -b .",
    "build:esm": "tsc -b tsconfig.esm.json",
    "test": "npm run test:browser && npm run test:node",
    "test:node": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:browser": "web-test-runner --config web-test-runner.config.mjs src/browser/**/*.test.ts",
    "test:browser:debug": "web-test-runner --config web-test-runner.config.mjs src/browser/**/*.test.ts --manual",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "url": "git@github.com:astronautlabs/jwt.git"
  },
  "author": {
    "name": "Astronaut Labs, LLC",
    "url": "https://astronautlabs.com/"
  },
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/chai": "^4.2.12",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^20.19.31",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-puppeteer": "^0.18.0",
    "atob": "^2.1.2",
    "chai": "^6.2.2",
    "jest": "^30.2.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "zone.js": "^0.11.1"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.3"
  },
  "engines": {
    "node": ">=11"
  }
}
